extends layout

block content
  h1= title
  p Welcome to #{title}
  
  button#newTournament Add Tournament
  
  ul
    each item in tournamentlist
      li 
        a(href='tourney/'+item.slug) #{item.name}
  script(src="main.js")
  
  #popup
    form(action="/api/tournament" method="post")
        p 
          input(type="text", name="Tournament", placeholder="Tournament Name")
        p 
          textarea(name="players", rows=5, placeholder="Macho Man, Hulk Hogan")
        p
          input(type="submit", value="submit")
        
      