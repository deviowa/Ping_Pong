

extends layout

block content
  .container(style="background:none;")  
    .rows
      .col-md-4.col-md-offset-4
        .well.tourney
          h1= title
          p Welcome to #{title}
          
          button#newTournament.btn.btn-block.btn-primary.btn-lg Add Tournament
          
          #popup
            form(action="/api/tournament" method="post")
                p 
                  input(class="form-control" type="text", name="Tournament", placeholder="Tournament Name")
                p 
                  textarea(class="form-control" name="players", rows=5, placeholder="Macho Man, Hulk Hogan")
                p
                  input(class="btn btn-block btn-primary btn-lg" type="submit", value="submit")

          ul
            each item in tournamentlist
              li 
                      a(href='tourney/'+item.slug) #{item.name}
          
          
        
block scripts 
  script(src="//code.jquery.com/jquery-1.10.2.min.js")
  script(src="/js/bootstrap.js")
  script(src="main.js")
