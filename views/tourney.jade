extends layout
mixin matchrow(playerone, playertwo)
  tr
    td: a #{playerone} VS #{playertwo}
    td

block content
    .container
        h1= Tournament
        p Welcome to the #{name}
        .row
          #matches.col-md-6
              h2 Matches
              table.table.table-striped
                tr
                  th Match
                  th Score
                each m in matches
                  +matchrow(m.home, m.away)
          #standings.col-md-6
              h2 Standings
              table.table.table-striped
                tr
                  th #
                  th Player
                  th Matches Won
                  th Matches Lost
                  th Sets Won
                  th Sets Lost
                tr
                  td 1
                  td Dexter
                  td 6
                  td 2
                  td 12
                  td 0
                tr
                  td 1
                  td Andrea
                  td 6
                  td 2
                  td 11
                  td 1
                  
                